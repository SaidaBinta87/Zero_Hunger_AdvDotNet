@model List<ZeroHu.DTOs.CollectRequestDTO>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Collect Requests Dashboard</h2>

<table class="table">
    <thead>
        <tr>
            <th>Collect Request ID</th>
            <th>Item Name</th>
            <th>Max Preserve Time</th>
            <th>Restaurant</th>
            <th>Employee</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var collectRequest in Model)
        {
            <tr>
                <td>@collectRequest.CollectRequestID</td>
                <td>@collectRequest.ItemName</td>
                <td>@collectRequest.MaxPreserveTime</td>
                <td>@collectRequest.Restaurant</td>
                <td>@collectRequest.Employee</td>
                <td>@collectRequest.Status</td>
                <td>
                    @if (collectRequest.Status == "Created")
                    {
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("AssignEmployeeFromRow", "Admin", new { collectRequestId = collectRequest.CollectRequestID })'">Assign Employee</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button class="btn btn-success" onclick="location.href='@Url.Action("AllRestaurants", "Admin")'">All Restaurants</button>
    <button class="btn btn-info" onclick="location.href='@Url.Action("AllEmployees", "Admin")'">All Employees</button>
    <button class="btn btn-warning" onclick="location.href='@Url.Action("AddNewEmployee", "Admin")'">Register a New Employee</button>
</div>